<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="StrongerBar">
        <attr name="colorGradient" format="reference" />
        <attr name="barHeight" format="dimension" />
        <attr name="thumbHeight" format="dimension" />
        <attr name="showAlphaBar" format="boolean" />
        <attr name="alphaBarPosition" format="integer" />
        <attr name="currentPosition" format="integer" />
        <attr name="bgColor" format="color" />
        <attr name="barMargin" format="dimension" />
        <attr name="offset" format="boolean" />
        <attr name="maxPosition" format="integer" />
        <attr name="isVertical" format="boolean" />
        <attr name="textAboveBar" format="boolean" />
        <attr name="textOffsideBar" format="boolean" />
        <attr name="secondColor" format="reference" />
        <attr name="textFacePath" format="string" />
        <attr name="frameColor" format="color" />
        <attr name="frameWidth" format="integer" />
        <attr name="bubbleMargin" format="dimension" />
        <attr name="bubbleWidth" format="dimension" />
        <attr name="bubbleHeight" format="dimension" />
        <attr name="bubbleTextSize" format="integer" />
        <attr name="bubbleColor" format="color" />
        <attr name="isShowBubble" format="boolean" />
        <attr name="ColorChangeCallBack" format="boolean" />
        <attr name="thumbBitmapFixed" format="reference"/>
        <attr name="thumbSrc" format="reference|color"/>
        <attr name="thumbChanged" format="boolean"/>
        <attr name="barRadiusX" format="dimension"/>
        <attr name="barRadiusY" format="dimension"/>
        <attr name="bubbleRadiusX" format="dimension"/>
        <attr name="bubbleRadiusY" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="StrongerBarOrientation">
        <attr name="rotation" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>
