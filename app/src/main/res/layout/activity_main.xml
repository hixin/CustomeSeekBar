<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <camera.cloudminds.com.strongbardemo.StrongerBar
        android:id="@+id/bar1"
        android:layout_width="250.29dp"
        android:layout_height="120.14dp"
        android:layout_centerVertical="true"
        app:barHeight="6.29dp"
        app:bubbleHeight="26dp"
        app:bubbleMargin="5dp"
        app:bubbleWidth="40dp"
        app:colorGradient="@array/contrast"
        app:isShowBubble="true"
        app:secondColor="@color/secondcolor"
        app:showAlphaBar="false"
        app:textFacePath="fonts/BasicCommercialW01Bold.ttf"
        app:thumbHeight="21.14dp"
        app:thumbSrc="@drawable/bar1" />

    <camera.cloudminds.com.strongbardemo.StrongerBar
        android:id="@+id/bar2"
        android:layout_width="250.29dp"
        android:layout_height="120.14dp"
        app:barHeight="6dp"
        app:bubbleHeight="26dp"
        app:bubbleWidth="54.3dp"
        app:bubbleMargin="5dp"
        app:bubbleTextSize="14"
        app:currentPosition="50"
        app:offset="true"
        app:textOffsideBar="false"
        app:showAlphaBar="false"
        app:textFacePath="fonts/BasicCommercialW01Bold.ttf"
        app:thumbHeight="36dp"
        app:thumbSrc="@drawable/red_iso"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        android:orientation="horizontal">

        <camera.cloudminds.com.strongbardemo.ApertureSeekBar
            android:id="@+id/bar3"
            android:layout_width="156dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            app:barHeight="6.29dp"
            app:bubbleHeight="26dp"
            app:bubbleMargin="5dp"
            app:bubbleWidth="50dp"
            app:bubbleTextSize="14"
            app:isShowBubble="true"
            app:isVertical="true"
            app:textOffsideBar="true"
            app:showAlphaBar="false"
            app:textFacePath="fonts/BasicCommercialW01Bold.ttf"
            app:thumbHeight="36dp"
            app:thumbChanged="true"/>

        <camera.cloudminds.com.strongbardemo.ShutterSpeedSeekBar
            android:id="@+id/bar4"
            android:layout_width="156dp"
            android:layout_height="250dp"
            app:barHeight="6dp"
            app:bubbleHeight="26dp"
            app:bubbleWidth="54.3dp"
            app:bubbleMargin="5dp"
            app:bubbleTextSize="14"
            app:currentPosition="50"
            app:isShowBubble="true"
            app:isVertical="true"
            app:offset="true"
            app:textOffsideBar="false"
            app:showAlphaBar="false"
            app:textFacePath="fonts/BasicCommercialW01Bold.ttf"
            app:thumbHeight="36dp"
            app:thumbChanged="true"/>

    </LinearLayout>

</LinearLayout>